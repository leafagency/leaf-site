mixin blog-post-grid-item(c)
  .grid__item.grid__item--blog-preview
    a.post(href=c.href)
      .post__content
        .post__meta
          span.post__category= c.category
          span.post__middle-dot &middot;
          span.post__mins #{c.duration} min read
        h2.post__heading(class= c.modifier ? "post__heading--" + c.modifier : "")= c.heading
        p.post__text(class= c.modifier ? "post__text--" + c.modifier : "")= c.text
