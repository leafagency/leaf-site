mixin resource(c)
  a.resource(href= c.resourceUrl)
    .resource__container
      +image({
        context: "resource",
        src: c.resourceImage.src,
        alt: c.resourceImage.alt
      })
      .resource__content
        .resource__meta
          span.resource__subheading= c.resourceSubheading
          if c.resourceBadge
            span.resource__badge Coming soon
        h3.resource__heading= c.resourceHeading
        p.resource__text= c.resourceText
