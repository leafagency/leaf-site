mixin author-bio(c)
  .author-bio(class= c.class)
    .author-bio__social-icons
      a.twitter(href= c.twitterUrl)
        +image({
          class: "author-bio__image author-bio__image--twitter",
          src: c.twitterImage.src,
          fallbackSrc: c.twitterImage.fallbackSrc,
          alt: c.twitterImage.alt
        })
      a.linkedin(href= c.linkedinUrl)
        +image({
          class: "author-bio__image author-bio__image--linkedin",
          src: c.linkedinImage.src,
          fallbackSrc: c.linkedinImage.fallbackSrc,
          alt: c.linkedinImage.alt
        })
    +author({
      class: c.author.class,
      authorDetails: c.author.authorDetails,
      authorName: c.author.authorName,
      authorThumbnail: {
        alt: c.author.authorThumbnail.alt,
        fallbackSrc: c.author.authorThumbnail.fallbackSrc,
        src: c.author.authorThumbnail.src
      }
    })
    .bio__content
      p.author-bio__paragraph= c.authorParagraph
      a.author-bio__link(href= c.authorLinkUrl) Get to know the team &rarr;
