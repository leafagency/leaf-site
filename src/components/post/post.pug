mixin post(c)
  a.post(href= c.postUrl)
    +image({
      class: "post__image",
      src: c.postImage.src,
      fallbackSrc: c.postImage.fallbackSrc,
      alt: c.postImage.alt
    })
    .post__content
      h3.post__heading= c.postHeading
      p.post__text= c.postText
      .post__footer
        +author({
          class: "author--margin-top",
          authorUrl: "/heha",
          authorThumbnail: {
            src: "/assets/images/mike_blog.png",
            fallbackSrc: "/assets/images/mike_blog.png",
            alt: "Mike",
          },
          authorName: "Mike Carter",
          authorDetails: "2 Aug 2018 Â· 3 min read"
        })

      