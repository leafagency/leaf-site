mixin profile(c)
  .profile(class= c.profileModifier ? "profile--" + c.profileModifier : "")
    +image({
      context: "profile",
      modifier: c.imageModifier,
      src: c.profileImage.src,
      alt: c.profileImage.alt
    })
    .profile__content
      h4.profile__heading(class= c.profileContentModifier ? "profile__heading--" + c.profileContentModifier : "")= c.profileHeading
      p.profile__text(class= c.profileContentModifier ? "profile__text--" + c.profileContentModifier : "")= c.profileText
