mixin block(c)
  .block(class= c.blockModifer ? "block--" + c.blockModifer : "")
    .block__content
      h2.block__heading= c.blockHeading
      .block__text!= c.blockContent
      if c.heroButton
        .block__button
          +button(c.blockButton)
    +image({
      context: "block",
      src: c.blockImage.src,
      alt: c.blockImage.alt
    })
