mixin author-bio-small(c)
  .author-bio-small()
    .author-bio-small__social-icons
      a.twitter(href= c.twitterUrl)
        +image({
          class: "author-bio-small__image author-bio-small__image--twitter",
          src: c.twitterImage.src,
          fallbackSrc: c.twitterImage.fallbackSrc,
          alt: c.twitterImage.alt
        })
      a.linkedin(href= c.linkedinUrl)
        +image({
          class: "author-bio-small__image author-bio-small__image--linkedin",
          src: c.linkedinImage.src,
          fallbackSrc: c.linkedinImage.fallbackSrc,
          alt: c.linkedinImage.alt
        })
    +author({
      authorUrl: c.authorUrl,
      authorThumbnail: {
        class: "author-bio__user",
        src: c.authorThumbnail.src,
        fallbackSrc: c.authorThumbnail.fallbackSrc,
        alt: c.authorThumbnail.alt
      },
      authorContent: {
        authorName: c.authorName,
        authorDetails: c.authorDetails
      },
    })
    .bio__content
      p.author-bio-small__paragraph= c.authorParagraph
      a.author-bio-small__link= c.authorLink 