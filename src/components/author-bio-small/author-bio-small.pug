mixin author-bio-small(c)
  .author-bio-small(class= c.class)
    .author-bio-small__social-icons
      a.twitter(href= c.twitterUrl)
        +image({
          context: "author-bio",
          modifier: "twitter",
          src: c.twitterImage.src,
          alt: c.twitterImage.alt
        })
      a.linkedin(href= c.linkedinUrl)
        +image({
          context: "author-bio",
          modifier: "linkedin",
          src: c.linkedinImage.src,
          alt: c.linkedinImage.alt
        })
    +author({
      class: c.author.class,
      authorDetails: c.author.authorDetails,
      authorName: c.author.authorName,
      authorThumbnail: {
        alt: c.author.authorThumbnail.alt,
        src: c.author.authorThumbnail.src
      }
    })
    .bio__content
      p.author-bio-small__paragraph= c.authorParagraph
      a.author-bio-small__link(href= c.authorLinkUrl) Get to know the team &rarr;
