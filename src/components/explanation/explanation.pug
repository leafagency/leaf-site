mixin explanation(c)
  .explanation(class= c.explanationModifier ? "explanation--" + c.explanationModifier : "")
    if c.explanationExample === true
      img.explanation__icon(src="/assets/images/icons/ui/info.svg", alt="", role="presentation")
      h3.explanation__heading !{c.explanationHeading}
    else
      img.explanation__icon(src="/assets/images/icons/ui/question.svg", alt="", role="presentation")
      h3.explanation__heading !{c.explanationHeading}
    p.explanation__text !{c.explanationText}