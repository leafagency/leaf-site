mixin banner(c)
  section.section
    if c.preview
      .banner
        .banner__opening
          .banner__shape.banner__shape--1
          h2.banner__heading Improve your product with our analysis report#[span.banner__heading__period .]
          p.banner__intro For just <strong>£749</strong>, we’ll create a bespoke report to help you identify where your product can be improved, highlight any issues, and increase your chances of success.
          .banner__button
            +button({
              modifier: "large",
              url: "/analysis",
              text: "Find out more"
            })
        .banner__key-points
          .banner__shape.banner__shape--2
          +checkmark-list({
            checkmarkList: [
              {
                text: "We’ll see where we can increase your products <strong class='checkmark-list-emphasised'>performance</strong> to help users finish their tasks faster."
              },
              {
                text: "We’ll make your product accessible to all so that <strong class='checkmark-list-emphasised'>no customer</strong> is excluded because of a disability."
              },
              {
                text: "We’ll review your product’s content to make sure it’s clear, concise, and <strong class='checkmark-list-emphasised'>suitable</strong> for your target audience."
              },
              {
                text: "We’ll identify opportunities to <strong class='checkmark-list-emphasised'>reduce</strong> the effort needed by you to capture customer information."
              }
            ]
          })
    else
      .banner.banner--checkout
        .banner__call-to-action
          .banner__shape.banner__shape--1
          h2.banner__heading How do I get started?
          p.banner__intro Use the link below to purchase the package, and we’ll contact you within 2 working days to arrange a call.
          .banner__button.banner__button--checkout
            +button({
              modifier: "large",
              url: "",
              text: "Buy your report for £749"
            })
          .banner__banks
            img.banner__bank(src="/assets/images/analysis/visa.svg", alt="We accept Visa payments.")
            img.banner__bank(src="/assets/images/analysis/mastercard.svg", alt="We accept Mastercard payments.")
            img.banner__bank(src="/assets/images/analysis/amex.svg", alt="We accept American Express payments.")
            img.banner__bank(src="/assets/images/analysis/discover.svg", alt="We accept Discover payments.")
            img.banner__bank(src="/assets/images/analysis/jcb.svg", alt="We accept JCB payments.")
            img.banner__bank(src="/assets/images/analysis/diners.svg", alt="We accept Diners Club International payments.")
            img.banner__bank(src="/assets/images/analysis/union-pay.svg", alt="We accept Union Pay payments.")
        .banner__refund-info
          .banner__shape.banner__shape--3
          h2.banner__heading.banner__heading--secondary What if I’m not happy?
          p.banner__intro We’ll offer you a full refund if you feel the report isn’t delivering on it’s promise.
          p.banner__text We have <strong class='checkmark-list-emphasised'>no interest</strong> in getting paid for work that isn’t providing real value for your business. If you aren’t satisfied with the report we produce for you, just let us know during the final call and we’ll make sure to refund you.