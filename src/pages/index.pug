extends ../layouts/page.pug

block prepend vars
  -var pageTitle = "Kent based web and mobile development"
  -var metaUrl = "https://weareleaf.com"
  -var metaTitle = "We make superfast applications."
  -var metaDescription = "(That your users will love)"

block pageComponents
  +hero({
    heroHeading: metaTitle,
    heroSubheading: metaDescription,
  })

  section.section
    .container
      .grid.grid--work-preview
        .grid__item
          

  section.section.section--margin-b
    .container
      +company-logos

  section.section.section--sm-spacing
    .container
      h2.small From the blog
      .grid.grid--blog.grid--blog-preview
