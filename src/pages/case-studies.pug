extends ../layouts/page.pug

block prepend vars
  -var activePage = "Case studies"
  -var pageTitle = "Case studies - Leaf"
  -var metaUrl = "https://weareleaf.com/case-studies"
  -var metaTitle = "Case studies"
  -var metaDescription = "We've helped some wonderful clients use technology to improve to their products and processes."

  -var heroHeading = "We add measurable value"
  -var heroSubheading = "The Web is the most cost-effective way to communicate to your users. From established dot-coms to bootstrapped startups, we help clients of all sizes keep their most important conversation going."

block pageComponents
  +hero({
    heroHeading: heroHeading,
    heroSubheading: heroSubheading,
  })

  section.section
    .container

      +presentation({
        project: {
        projectSubHeading: "Holiday Extras Travel Insurance",
          projectHeading: "Painless insurance quotes",
          projectText: "Holiday Extras wanted the experience of buying travel insurance online to match that of their award-winning call centre.",
          projectButton: {
            buttonUrl: "/holiday-extras",
            buttonText: "See the case study"
          }
        },
        presentationImage: {
          src: "/assets/images/case-studies/hx/presentation.png",
          alt: "Holiday Extras"
        },
        presentationModifier: "reverse"
      })

      +presentation({
        project: {
          projectSubHeading: "Heha!",
          projectHeading: "Hassle-free travel",
          projectText: "Planning trips is tough. We worked with Holiday Extras to create HEHA!, an iOS and Android app to simplify the task.",
          projectButton: {
            buttonUrl: "/heha",
            buttonText: "See the case study"
          }
        },
        presentationImage: {
          src: "/assets/images/case-studies/heha/presentation.png",
          alt: "HEHA!"
        },
        imageModifier: "90"
      })

      +presentation({
        project: {
          projectSubHeading: "MyRIFT",
          projectHeading: "Helping Brits claim back tax",
          projectText: "We helped RIFT re-imagine their web application, making tax refund claims easier to manage for their customers.",
          projectButton: {
              buttonUrl: "/rift",
              buttonText: "See the case study"
          }
        },
        presentationImage: {
          src: "/assets/images/case-studies/rift/presentation.png",
          alt: "RIFT"
        },
        presentationModifier: "reverse"
      })

      +presentation({
        project: {
        projectSubHeading: "Laced",
          projectHeading: "21st century sneaker trading",
          projectText: "We moved Laced's rare sneaker trading business online, automating their buying, selling, shipping, and quality control.",
          projectButton: {
            buttonUrl: "/laced",
            buttonText: "See the case study"
          }
        },
        presentationImage: {
          src: "/assets/images/case-studies/laced/presentation.png",
          alt: "Laced"
        },
        presentationModifier: "reverse",
        imageModifier: "laced",
      })
