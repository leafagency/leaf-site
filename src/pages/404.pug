    heading: heroHeading,
    subheading: heroSubheading,
  })

  section.section.section--longform
    .container
      .grid.grid--center
        .grid__item
          +image({
            src: "/assets/images/case-studies/hx/presentation.jpg",
            alt: "Holiday Extras insurance quote questionnaire, showing several of the steps on some mobile devices."
          })
