extends ../layouts/page.pug

block prepend vars
  -var activePage = "Expertise"
  -var pageTitle = "Expertise - Leaf"
  -var metaUrl = "https://weareleaf.com/expertise"
  -var metaTitle = "Expertise"
  -var metaDescription = "We help organisations gather complex information using research-backed methods that keep your users feeling in control."

  -var heroHeading = "We know our onions"
  -var heroSubheading = "More than just text fields and checkboxes, well executed data gathering means capturing information intelligently, humanly, and in a way that delivers the maximum possible value to the organisation."

block pageComponents
  +hero({
    heroHeading: heroHeading,
    heroSubheading: heroSubheading
  })

  section.section
    .container

      +specialism({
        specialismSubHeading: "Forms",
        specialismHeading: "Research-backed approach to form-based data capture.",
        specialismText: "The humble form is the Grandaddy of digital data capture, and is easy to make but difficult to make well. We create form-based user flows using decades of industry research, helping your users serve themselves.",
        explanationList: {
          explanationListItems: [
            {
              explanationText: "Most form fields contain placeholder text, but various studies have found that users often skip over such inputs, misiterpreting them as being pre-filled or completed.",
              explanationExample: true
            },
            {
              explanationText: "The cost of capturing data online is far lower than gathering it by phone. When your users provide information themselves, your staff are free to do other valuable work."
            }
          ]
        },
        specialismImage: {
          src: "/assets/images/expertise/forms.png",
          alt: "Forms"
        },
        specialismModifier: "reverse"
      })

      +specialism({
        specialismSubHeading: "Accessibility",
        specialismHeading: "Inclusive design decisions and engineering practices.",
        specialismText: "The Web is not solely for the able bodied, although it's often treated as if it were. Over a billion of us have an impairment of some kind, and designing inclusively means designing for the full spectrum of human diversity.",
        explanationList: {
          explanationListItems: [
            {
              explanationText: "Colour blindness affects roughly 1 in 12 men and 1 in 200 women, making colour alone a poor choice for indicating or inferring meaning in an interface.",
              explanationExample: true
            },
            {
              explanationText: "1 in 5 of us in the UK have a long term illness, impairment or disability. As well as the many ethical reasons to, inviting everybody to the party increases your audience."
            }
          ]
        },
        specialismImage: {
          src: "/assets/images/expertise/accessibility.png",
          alt: "Accessibility"
        }
      })

      +specialism({
        specialismSubHeading: "Psychology",
        specialismHeading: "An understanding of what makes humans tick (and click).",
        specialismText: "You can't confidently design for humans if you don't understand people. Well all make conscious and unconscious decisions, and appealing to each neurological influence is essential in crafting compelling experiences.",
        explanationList: {
          explanationListItems: [
            {
              explanationText: "The fear of losing motivates us more than the opportunity to win. Rather than up-selling, allow users to remove elements from a comprehensive starting-point.",
              explanationExample: true
            },
            {
              explanationText: "Organisations who accommodate the underlying desires and behaviours of their users tend to enjoy higher conversion rates and stronger brand loyalty."
            }
          ]
        },
        specialismImage: {
          src: "/assets/images/expertise/psychology.png",
          alt: "Psychology"
        },
        specialismModifier: "reverse"
      })

      +specialism({
        specialismSubHeading: "Writing",
        specialismHeading: "Content written for humans, not computers.",
        specialismText: "An interface is simply a tool for communicating with somebody, yet too often the language used on the Web is cold and robotic. Writing copy with humans in mind is the quickest way to start building trust with your users.",
        explanationList: {
          explanationListItems: [
            {
              explanationText: "Speaking your audience's language may mean avoiding technical terms, using less nouns, and opting for informal words like ‘ask’ and ‘need’ over ‘request’ and ‘require’.",
              explanationExample: true
            },
            {
              explanationText: "Trust is central to building and retaining value, and a consistent tone of voice helps to build confidence, humanise the brand, and separate you from your competitors."
            }
          ]
        },
        specialismImage: {
          src: "/assets/images/expertise/writing.png",
          alt: "Writing"
        },
        imageModifier: "writing"
      })

      +specialism({
        specialismSubHeading: "Deep thinking",
        specialismHeading: "Decision-making dictated by the needs of the audience.",
        specialismText: "Software isn't one-size-fits-all, and different audiences will have different expectations, hopes, and fears. A well-designed product will need to cater for the variance in user capabilities, either situationally or otherwise.",
        explanationList: {
          explanationListItems: [
            {
              explanationText: "The needs of an app for a sales rep (a repeat user,  working at speed, and using an iPad in direct sunlight) would be very different to that of an over-50's life insurance quote engine (designed for trust, and catering for poor eyesight and/or motor skills).",
              explanationExample: true
            },
            {
              explanationText: "Accommodating the needs of your users is good business. Beyond conversions, empathetic design leads to referrals from customers turned brand ambassadors."
            }
          ]
        },
        specialismImage: {
          src: "/assets/images/expertise/deep-thinking.png",
          alt: "Deep thinking"
        },
        specialismModifier: "reverse"
      })

      +specialism({
        specialismSubHeading: "Intelligent data capture",
        specialismHeading: "Data inferred or gathered indirectly where possible.",
        specialismText: "It’s difficult to provide information online, so ask as little of your users as you can. With the emergence of powerful APIs, hardware-enabled sensors, and wearables, it's rare that all of our questions are answered by the user.",
        explanationList: {
          explanationListItems: [
            {
              explanationText: "Rather than asking the user to enter every detail about their vehicle, ask for the registration, and use an appropriate API to automatically gather the information.",
              explanationExample: true
            },
            {
              explanationText: "Gathering data indirectly from a well maintained API leads to easier customer tasks, increasing your convertion rates, and reducing the burden on your support staff."
            }
          ]
        },
        specialismImage: {
          src: "/assets/images/expertise/intelligent-data-capture.png",
          alt: "Intelligent data capture"
        }
      })

      +specialism({
        specialismSubHeading: "Data quality",
        specialismHeading: "Turning high-quality data into opportunities.",
        specialismText: "Capturing vague, varied, or poorly formated data comes at a cost, and not just financially. The better the data, the greater your ability to validate conjecture, uncover patterns or trends, and reduce human involvement.",
        explanationList: {
          explanationListItems: [
            {
              explanationText: "A well-formed address can help you understand geographical strongholds, simplify its presentation, and verify the data without any kind of manual review.",
              explanationExample: true
            },
            {
              explanationText: "Poorly structured or stored data cannot be manipulated, analysed, or validated with any confidence, forcing your staff to routinely pick up the tasks themselves."
            }
          ]
        },
        specialismImage: {
          src: "/assets/images/expertise/data-quality.png",
          alt: "Data quality"
        },
        specialismModifier: "reverse"
      })