extends ../layouts/landing.pug

block prepend vars
  -var activePage = "self-service"
  -var bodyClass = "landing"
  -var pageTitle = "Digital products for companies with call-centres - Leaf"
  -var metaUrl = "https://weareleaf.com/call-centres"
  -var metaTitle = "Digital products to drive customer self-service"
  -var metaDescription = "We blend technology and design to help businesses empower their customers online."


block pageComponents
  +hero({
    heroModifier: "landing", 
    heroHeading: metaTitle, 
    heroText: metaDescription,
    heroButton: {
      buttonUrl: "#",
      buttonText: "Start the conversation",
      navItemTriggerModal: true
    },
    heroImage: {
      src: "/assets/images/heros/home.gif",
      alt: metaTitle
    }
  })

  section.section(id="what-we-do")
    .container
      .grid.grid--statements
        .grid__item
          +statement({
            statementIcon: "/assets/images/icons/consult.svg",
            statementHeading: "Consultancy",
            statementText: "We'll work together to guide your architectural and technical approaches, stepping you towards achieving your business goals.",
            statementLink: {
              href: "#",
              text: "Find out more",
              triggerModal: true
            }
          })
        
        .grid__item
          +statement({
            statementIcon: "/assets/images/icons/tasks.svg",
            statementHeading: "Performance audit",
            statementText: "We'll review your existing application, making detailed and prioritised recommendations, helping you focus your efforts.",
            statementLink: {
              href: "#",
              text: "Find out more",
              triggerModal: true
            }
          })

        .grid__item
          +statement({
            statementIcon: "/assets/images/icons/magic.svg",
            statementHeading: "UX Design",
            statementText: "We'll make sure your customers love your product, creating applications that meet not only their needs, but those of the business.",
            statementLink: {
              href: "#",
              text: "Find out more",
              triggerModal: true
            }
          })

        .grid__item
          +statement({
            statementIcon: "/assets/images/icons/code.svg",
            statementHeading: "Development",
            statementText: "If you'd like our help with implementing our recommendations, we'll ensure your product is as performant as your codebase is maintainable.",
            statementLink: {
              href: "#",
              text: "Find out more",
              triggerModal: true
            }
          })
          
  section.section(id="our-work")
    .container
      h2.small Recent successes
      .grid.grid--symmetrical-card
        .grid__item
          +card({
            cardImage: {
              src: "/assets/images/rift.jpg",
              alt: "MyRIFT",
            },
            cardHeading: "Helping the UK to claim tax refunds",
            cardText: "We allowed RIFT's customers to make their tax refunds online, significant reducing call centre, staff processing, administrative overheads.",
            cardLink: {
              href: "#",
              text: "Find out more",
              triggerModal: true
            }
          })
      
        .grid__item
          +card({
            cardImage: {
              src: "/assets/images/laced.jpg",
              alt: "Laced",
            },
            cardHeading: "21st century sneaker trading",
            cardText: "We helped Laced secure series A funding without hiring new staff by moving their rare sneaker trading business onlinem automating their buying, selling, shipping, and quality control.",
            cardLink: {
              href: "#",
              text: "Find out more",
              triggerModal: true
            }
          })
  
  
  section.section--margin-b
    .container
      +company-logos
      
  
  section.section(id="company")
    .container
      .grid.grid--statements
        .grid__item
          +statement({
            statementIcon: "/assets/images/icons/leaves.svg",
            statementHeading: "We nurture relationships",
            statementText: "As a remote organisation, we work with clients from all across the world. Our focus on cultivating relationships puts your success first."
          })

        .grid__item
          +statement({
            statementIcon: "/assets/images/icons/scales.svg",
            statementHeading: "Intentionally lean",
            statementText: "We hate the faceless conveyor belt model of larger agencies. Keeping our overheads low and our core team small means you'll always be a priority."
          })

        .grid__item
