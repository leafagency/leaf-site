extends ../layouts/page.pug

block prepend vars
  -var pageTitle = "Bespoke business automation - Leaf"
  -var metaUrl = "https://weareleaf.com"
  -var metaTitle = "Bespoke business automation"
  -var metaDescription = "We're specialists in building digital products & services that automate business."

block pageComponents
  +hero({
    heroModifier: "home",
    heroHeading: metaTitle,
    heroText: metaDescription,
    heroButton: {
      buttonUrl: "/what-we-do",
      buttonText: "Get in touch with us"
    },
    heroImage: {
      src: "/assets/images/heros/home.gif",
      alt: "We work with you to uncover automation opportunities.",
    }
  })

  section.section
    .container
      +page-header({
        pageHeaderHeading: "Improve your products",
        pageHeaderText: "We have a proven success rate in helping businesses to automate their processes through intelligent design and software solutions."
      })
  
  section.section
    .container
      .grid.grid--symmetrical-card
        .grid__item
          img(src="/assets/images/laced.jpg", alt="Laced")

        .grid__item
          img(src="/assets/images/rift.jpg", alt="Rift")
  section.section
    .container
      +automation-metrics({
        metric: [
          {
            metricHeading: "Increased efficiency",
            metricText: "Through automation, our clients have seen a significant increase in the efficiency of their business operations."
          },
          {
            metricHeading: "Higher productivity",
            metricText: "Our clients now use their time more effectively, by utilising our systems to automate manual and repetitive tasks."
          },
          {
            metricHeading: "Consistent reliability",
            metricText: "Our systems have proven to be fast and effective 100% of the time, reducing the risk of human related errors."
          }
        ]
      })

  section.section
    .container
      hr.divider.divider--margin-top

  section.section
    .container
      +page-header({
        pageHeaderHeading: "Want to hear more?",
        pageHeaderText: "We're always happy to help, so if there's anything you want to know, feel free to drop us an email and we'll get back to you as quickly as possible."
      })

      .grid.grid--two-thirds
        .grid__item
          +contact-form

        .grid__item
            +sidebar([{
              item: "We're a <strong>remote studio</strong>, which not only helps us recruit the best talent, but prioritises both our own and your time."
            },{
              item: "Invoices are issued at the end of each calendar month, and are to be paid within <strong>14 days</strong>."
            }])