  -var metaUrl = "https://weareleaf.com/company"
  -var metaTitle = "Company"
  -var metaDescription = "Four friends with experience in helping organisations fulfil their digital ambitions."


block pageComponents
  +hero({
    heroModifier: "company",
    heroHeading: "Company",
    heroText: "Four friends with experience in helping organisations fulfil their digital ambitions.",
    heroImage: {
      src: "/assets/images/company.webp",
      fallbackSrc: "/assets/images/company.png",
      alt: "Alt text for hero image",
    }
  })

  section.section
    .container
      .grid.grid--statements
        .grid__item
          +statement({
            statementIcon: "/assets/images/icons/leaves.svg",
            statementHeading: "We nurture relationships",
            statementText: "As a remote organisation, we work with clients from all across the world. Our focus on cultivating relationships puts your success first."
          })

        .grid__item
          +statement({
            statementIcon: "/assets/images/icons/scales.svg",
            statementHeading: "Intentionally lean",
            statementText: "We hate the faceless conveyor belt model of larger agencies. Keeping our overheads low and our core team small means you'll always be a priority."
          })

        .grid__item
          +statement({
            statementIcon: "/assets/images/icons/communicate.svg",
