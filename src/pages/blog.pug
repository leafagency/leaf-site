extends ../layouts/page.pug

block prepend vars
  -var activePage = "Blog"
  -var pageTitle = "Blog - Leaf"
  -var metaUrl = "https://weareleaf.com/blog"
  -var metaTitle = "Blog"
  -var metaDescription = "A collection of content around the themes of business process automation and agency life."


block pageComponents
  +hero({
    heroModifier: "blog",
    heroHeading: "Blog",
    heroText: metaDescription,
    heroImage: {
      src: "/assets/images/heros/ebooks.gif",
      alt: "Blog",
    }
  })

  section.section
    .container
      +page-header({
        pageHeaderHeading: "Our content",
        pageHeaderText: "We aim to give an insight into what it is we do when automating businesses, as well as show you more of Leaf and how we operate behind the scenes."
      })

      .grid.grid--blog.grid--blog-index

