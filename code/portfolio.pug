extends ./templates/base/_base

block prepend vars
  -var bodyClass = "portfolio-page"
  -var title = "Portfolio - Leaf"

block header
  //- Open Graph
  +facebook-metadata({
    title: "Leaf Software Ltd",
    description: "Leaf are web application development experts, specialising in lean digital products that make peoples lives easier.",
    image: "http://www.weareleaf.com/images/leaf-logo-1200.png",
    type: "business.business",
    url: "http://www.weareleaf.com"
  })

  //- Twitter card
  +twitter-metadata({
    title: "Leaf Software Ltd",
    description: "Leaf are web application development experts, specialising in lean digital products that make peoples lives easier.",
    site: "@we_are_leaf",
    image: "http://www.weareleaf.com/images/leaf-logo-1200.png"
  })

block content

  //- Hero banner
  +hero-banner({
    mastheadArgs: {
      logoArgs: {
        white: true
      },
      navigationArgs: {
        white: true
      },
      callToActionArgs: {
        link: "/contact",
        name: "Let's chat"
      }
    },
    heroBannerArgs: {
      green: true
    },
    pageHeaderArgs: {
      intro: "The sum of everything we do is reflected in the work we produce. We're privileged to have worked on some great brands, and proud of show off our hard work.",
      inverse: true,
      title: "Portfolio"
    }
  })

  //- Section
  +section({
    heading: "Client work",
    text: "A selection of our recent work, ranging from WordPress marketing sites through to full blown Ruby on Rails web applications."
  })

    //- Gallery
    +gallery([{
      alt: "HEHA case study",
      href: "portfolio/heha",
      intro: "Case study",
      src: "/images/responsive/work/heha-600.jpg",
      srcset: "/images/responsive/work/heha-200.jpg 200w, /images/responsive/work/heha-400.jpg 400w, /images/responsive/work/heha-600.jpg 600w",
      title: "HEHA"
    },
    {
      alt: "MyRIFT case study",
      href: "portfolio/my-rift",
      intro: "Case study",
      src: "/images/responsive/work/my-rift-855.jpg",
      srcset: "/images/responsive/work/my-rift-200.jpg 200w, /images/responsive/work/my-rift-400.jpg 400w, /images/responsive/work/my-rift-600.jpg 600w, /images/responsive/work/my-rift-855.jpg 855w",
      title: "MyRIFT",
      wide: true
    },
    {
      alt: "BoxedUp case study",
      href: "portfolio/boxedup",
      intro: "Case study",
      src: "/images/responsive/work/boxedup-855.jpg",
      srcset: "/images/responsive/work/boxedup-200.jpg 200w, /images/responsive/work/boxedup-400.jpg 400w, /images/responsive/work/boxedup-600.jpg 600w, /images/responsive/work/boxedup-800.jpg 800w, /images/responsive/work/boxedup-855.jpg 855w",
      title: "BoxedUp",
      wide: true
    },
    {
      alt: "Zendesk case study",
      href: "portfolio/zendesk",
      intro: "Case study",
      src: "/images/responsive/work/zendesk-600.jpg",
      srcset: "/images/responsive/work/zendesk-200.jpg 200w, /images/responsive/work/zendesk-400.jpg 400w, /images/responsive/work/zendesk-600.jpg 600w",
      title: "Zendesk"
    },
    {
      alt: "Keen case study",
      href: "portfolio/keen",
      intro: "Case study",
      src: "/images/responsive/work/keen-600.gif",
      srcset: "/images/responsive/work/keen-200.gif 200w, /images/responsive/work/keen-400.gif 400w, /images/responsive/work/keen-600.gif 600w",
      title: "Keen"
    },
    {
      alt: "CakeBoxx Technology case study",
      href: "portfolio/cakeboxx",
      intro: "Case study",
      src: "/images/responsive/work/cakeboxx-855.jpg",
      srcset: "/images/responsive/work/cakeboxx-200.jpg 200w, /images/responsive/work/cakeboxx-400.jpg 400w, /images/responsive/work/cakeboxx-600.jpg 600w, /images/responsive/work/cakeboxx-800.jpg 800w, /images/responsive/work/cakeboxx-855.jpg 855w",
      title: "CakeBoxx Technology",
      wide: true
    }])
    
  //- Section
  +section({
    heading: "Our products",
    text: "As well as helping others achieve their goals, we've also started building our own suite of industry-focused products."
  }).no-padding-top

    +products([{
      alt: "Howdy",
      description: "Howdy turns your static HTML contact forms in to the real thing without writing a line of code.",
      href: "https://howdyform.com/",
      src: "/images/responsive/work/keen-600.gif",
      srcset: "/images/responsive/work/howdy-200.png 200w, /images/responsive/work/howdy-400.png 400w, /images/responsive/work/howdy-600.png 600w",
