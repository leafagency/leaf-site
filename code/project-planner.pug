extends ./templates/base/_base

block prepend vars
  -var bodyClass = "project-planner-page page--center page--inverse"
  -var title = "Leaf"

block content

  //- Hero banner
  +hero-banner({
    pageHeaderArgs: {
      intro: "This only takes a few minutes to complete, but allows us to understand your motivations and your goals.",
      title: "Project planner"
    }
  })

  //- Section
  +section({
    narrow: true
  }).no-padding-top

    form.form(action="submit", autocomplete="off")

      .form__section

        h2.form__heading About you

        .form-group
          label.form-group__label(for="name") What's your <mark class="form-group__label__highlight">name</mark>?
          input.form-group__input(type="text", name="name", placeholder="Samwise Gamgee", required)

        .form-group
          label.form-group__label(for="email") What's your <mark class="form-group__label__highlight">email address</mark>?
          input.form-group__input(type="email", name="email", placeholder="samwise@gmail.com", required)

        .form-group
          label.form-group__label(for="organisation") What's your <mark class="form-group__label__highlight">company or organsation</mark>?
          input.form-group__input(type="text", name="organisation", placeholder="Fellowship of the Ring", required)

      hr

      .form__section
        h2.form__heading The project

        .form-group
          label.form-group__label Is it a <mark class="form-group__label__highlight">brand new product</mark> or a <mark class="form-group__label__highlight">re-design</mark> of existing product?
          .form-group__controls
            label.control.control--radio
              input.control__input(name="productStatus", type="radio", checked)
              span.control__indicator
              span.control__label New product
            label.control.control--radio
              input.control__input(name="productStatus", type="radio")
              span.control__indicator
              span.control__label Re-design

        .form-group
          label.form-group__label What <mark class="form-group__label__highlight">type of products</mark> are you looking for?
          .form-group__controls
            label.control.control--checkbox
              input.control__input(name="productType", type="checkbox")
              span.control__indicator
              span.control__label Website
            label.control.control--checkbox
              input.control__input(name="productType", type="checkbox")
              span.control__indicator
              span.control__label Web app
            label.control.control--checkbox
              input.control__input(name="productType", type="checkbox")
              span.control__indicator
              span.control__label Mobile app
            label.control.control--checkbox
              input.control__input(name="productType", type="checkbox")
              span.control__indicator
              span.control__label Other

        .form-group
          label.form-group__label(for="url") What's the <mark class="form-group__label__highlight">URL</mark> of the website?
          input.form-group__input(type="url", name="url", placeholder="lordoftherings.com", required)

        .form-group
          label.form-group__label(for="budget") <mark class="form-group__label__highlight">How much</mark> are you looking to invest?
          input.form-group__input(type="text", name="budget", placeholder="Â£15,000", required)

        .form-group
          label.form-group__label(for="timescales") Do you have any <mark class="form-group__label__highlight">timescales</mark> in mind? <span class="form-group__label__optional">(optional)</span>
          input.form-group__input(type="text", name="timescales", placeholder="We need it live by May")

        .form-group
          label.form-group__label(for="description") Tell us about the project, and <mark class="form-group__label__highlight">what you're looking to achieve</mark>?
          textarea.form-group__input(name="description", placeholder="The more you can share, the better", required)

      input.button(type="submit", value="Send away")
