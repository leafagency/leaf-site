extends templates/base/_base

block prepend vars
  -var bodyClass = 'home-page'
  -var title = 'Leaf'

block content

    .page-header
      h1.page-header__title Agile web products, made with joined up thinking
      p.page-header__intro Leaf are a UK-based web design and development studio, specialising in lean digital products that make peoples lives easier.

    main
      dl
        dt Currently working with
        dd Holiday Extras, Keen, Zendesk
        dt Availability
        dd Available from September

      a(href='#').btn Tell us how we can help

    ul.portfolio
      li.portfolio__item.portfolio__item--1.animated.fadeInDown
      li.portfolio__item.portfolio__item--2.animated.fadeInLeft
      li.portfolio__item.portfolio__item--3.animated.fadeInUp
