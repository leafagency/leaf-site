extends ./templates/base/_base

block prepend vars
  -var bodyClass = "home-page"
  -var title = "Kent based web and mobile development"

block header
  //- Open Graph
  +facebook-metadata({
    title: "Leaf Software Ltd",
    description: "Leaf are web application development experts, specialising in lean digital products that make peoples lives easier.",
    image: "http://www.weareleaf.com/images/leaf-logo-1200.png",
    type: "business.business",
    url: "http://www.weareleaf.com"
  })

  //- Twitter card
  +twitter-metadata({
    title: "Leaf Software Ltd",
    description: "Leaf are web application development experts, specialising in lean digital products that make peoples lives easier.",
    site: "@we_are_leaf",
    image: "http://www.weareleaf.com/images/leaf-logo-1200.png"
  })

block content

  //- Hero banner
  +hero-banner({
    mastheadArgs: {
      logoArgs: {
        white: true
      },
      callToActionArgs: {
        link: "/contact",
        name: "Let's chat"
      },
      navigationArgs: {
        white: true
      }
    },
    heroBannerArgs: {
      green: true
    },
    pageHeaderArgs: {
      intro: "We're experts in creating fast, easy to use, and beautiful products for web and mobile.",
      inverse: true,
      title: "Kent based product development"
    }
  })

  //- Section
  +section({
    heading: "Experience",
    text: "Our work is the ultimate reflection of ourselves. We've worked on some pretty exciting projects recently; here are some of our favourites."
  })

    //- Gallery
    +gallery([{
      alt: "HEHA case study",
      href: "portfolio/heha",
      intro: "Case study",
      src: "/images/responsive/work/heha-600.jpg",
      srcset: "/images/responsive/work/heha-200.jpg 200w, /images/responsive/work/heha-400.jpg 400w, /images/responsive/work/heha-600.jpg 600w",
      title: "HEHA"
    },{
      alt: "MyRIFT case study",
      href: "portfolio/my-rift",
      intro: "Case study",
      src: "/images/responsive/work/my-rift-600.jpg",
      srcset: "/images/responsive/work/my-rift-200.jpg 200w, /images/responsive/work/my-rift-400.jpg 400w, /images/responsive/work/my-rift-600.jpg 600w, /images/responsive/work/my-rift-800.jpg 800w, /images/responsive/work/my-rift-855.jpg 855w",
      title: "MyRIFT",
      wide: true
    }])

    //- Logo stack
    +logo-stack([{
      alt: "Zendesk",
      src: "clients/grey/zendesk.svg",
      href: "portfolio/zendesk"
    },{
      alt: "BoxedUp",
      src: "clients/grey/boxedup.svg",
      href: "portfolio/boxedup"
    },{
      alt: "CakeBoxx Technology",
      src: "clients/grey/cakeboxx.svg",
      href: "portfolio/cakeboxx"
    },{
      alt: "HEHA",
      src: "clients/grey/heha.svg",
      href: "portfolio/heha"
    },{
      alt: "Holiday Extras",
      src: "clients/grey/holidayextras.svg",
      href: "http://holidayextras.com",
      target: "_blank"
    },{
      alt: "Majestic",
      src: "clients/grey/majestic.svg",
      href: "https://www.youtube.com/user/majesticcasual",
      target: "_blank"
    },{
      alt: "RIFT",
      src: "clients/grey/rift.svg",
      href: "portfolio/my-rift",
    }]).logo-stack--small

  //- Section
  +section({
    background: "white"
  }).no-padding

    //- Block
    +block([{
      href: "design",
      intro: "Creative",
      text: "Interface design is the marriage of user and business goals, using structure, iteration and style to create a window into your product.",
      title: "Interface design"
    },{
      href: "development",
      intro: "Engineering",
      text: "Expertly crafted, thoroughly thought out web and mobile applications; we take software engineering incredibly seriously.",
      title: "Product development"
    }])

  //- Section
  +section({}).kent

    //- Box
    +box({
      button: "Let's chat",
      link: "/contact",
      text: "We're located in the heart of the idyllic city of Canterbury, and regularly work with Kent-based companies. If you're local, or simply in the area, we'd love to grab a coffee and talk shop.",
      title: "Proudly from Kent"
    })
